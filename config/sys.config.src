[
    {dog, [
        {version, "${DOG_AGENT_VERSION}"},
        {enforcing, true},
        {use_ipsets, true},
	{cmd_user, "root"}
    ]},
    {kernel,[
     {inet_dist_use_interface,{127,0,0,1}},
      {logger_level, all},
      {logger, [

        {handler, default, logger_std_h,
        #{
          level => error,
          formatter => {flatlog,
                          #{max_depth => 3,
                            term_depth => 50,
                            colored => true
        }}}},
        {handler, disk_log_debug, logger_disk_log_h,
          #{config => #{
                file => "/var/log/dog/debug.log",
                type => wrap,
                max_no_files => 5,
                max_no_bytes => 10000000
            },
            level => debug,
            formatter => {flatlog, #{
              map_depth => 3,
              term_depth => 50
            }}
          }
        },

        %%% Disk logger for errors
        {
          handler, disk_log_error, logger_disk_log_h,
          #{config => #{
                file => "/var/log/dog/error.log",
                type => wrap,
                max_no_files => 5,
                max_no_bytes => 10000000
            },
            level => error,
            formatter => {
              flatlog, #{
                map_depth => 3,
                term_depth => 50
              }
            }
          }
        }
    ]

    }]},
    {turtle, [
        {connection_config, [
            #{
                conn_name => default,

                username => "${DOG_AGENT_BROKER_USERNAME}",
                password => "${DOG_AGENT_BROKER_PASSWORD}",
                virtual_host => "${DOG_AGENT_BROKER_VIRTUAL_HOST}",
                ssl_options => [
                               {cacertfile, "${DOG_AGENT_CACERTFILE}"},
                               {certfile,   "${DOG_AGENT_CERTFILE}"},
                               {keyfile,    "${DOG_AGENT_KEYFILE}"},
                               {verify, verify_peer},
                               {server_name_indication, disable},
                               {fail_if_no_peer_cert, true}
                              ],
                deadline => 300000,
                connections => [
                    {main, [
                      {"${DOG_AGENT_BROKER_HOST}", ${DOG_AGENT_BROKER_PORT} }
                    ]}
                ]
            }
        ]
    }
    ]},
    {erldocker, [
        {docker_http, <<"http+unix://%2Fvar%2Frun%2Fdocker.sock">>}
    ]},
    {erlexec, [
	    {debug, 0},
	    {verbose, false},
	    {root, true}, %% Allow running child processes as root
	    {args, []},
	    %{alarm, 5},  %% sec deadline for the port program to clean up child pids
	    {user, "root"},
	    {limit_users, ["root"]}
  ]}
].
