[
    {kernel,[
        {inet_dist_use_interface,{127,0,0,1}}
    ]},
    {dog, [
        {version, "7342b0908e4dbf8daf70ccf3f18422c7d654c504"},
        {enforcing, true},
        {use_ipsets, true}
    ]},
    {lager, [
        {handlers, [
            {lager_file_backend, [{file, "/var/log/dog/debug.log"}, {level, debug}]},
            {lager_file_backend, [{file, "/var/log/dog/error.log"}, {level, error}]},
            {lager_file_backend, [{file, "/var/log/dog/console.log"}, {level, info }]}
        ]},
        {crash_log, "/var/log/dog/crash.log"},
        {tracefiles, [
                ]},
        {async_threshold, 10000},
        {sieve_threshold, 5000},
        {sieve_window, 100},
        {colored, true},
        {error_logger_redirect, true}
    ]},
    {turtle, [
        {connection_config, [
            #{
                conn_name => default,

                username => "guest",
                password => "guest",
                virtual_host => "dog",
                deadline => 300000,
                connections => [
                    {main, [
                      {"rabbitmq", 5672 } 
                    ]}
                ]
            }
        ]
    }
    ]},
    {erldocker, [
        {docker_http, <<"http+unix://%2Fvar%2Frun%2Fdocker.sock">>}
    ]},
    %{erlexec, [
    %    {user, "root"}, {limit_users, ["root","dog"]}
    %]}
    {erlexec, [
	    {debug, 1},
	    {verbose, true},
	    {root, true}, %% Allow running child processes as root
	    {args, []},
	    %{alarm, 5},  %% sec deadline for the port program to clean up child pids
	    {user, "root"},
	    {limit_users, ["root"]}
  ]}
].
        
